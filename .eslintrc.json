{
  "env": {
    "es6": true
  },
  "extends": [
    "airbnb-base",
    "airbnb-typescript/base"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "semi": "off",
    "no-console": 0,
    "no-use-before-define": ["error", { "functions": false }],
    "import/no-extraneous-dependencies": 0,
    "import/no-unresolved": 0,
    "import/extensions": 0,
    "linebreak-style": 0,
    "@typescript-eslint/semi": [2, "never"]
  }
}
